<div class="row">
    <div class="col-9">
        <h2 class="text-secondary bg-light p-1 ">FICHA ESCOLAR</h2>
    </div>
    <div class="col-3 text-end">
        <h2 class="mark text-center">Perfil</h2>
    </div>
</div>
<hr>
<div class="container">
    <div class="row">

        <div class="col-3 mx-0 px-0">
            <div class="card mx-0 px-0">
                <div class="card-body mx-0">
                    <img src="/uploads/{{aluno.foto}}" class="fotoAluno" alt="">
                </div>
            </div>
        </div>
        {{!-- DADOS PESSOAIS --}}
        <div class="col-6 mx-0">
            <h6 class="bg-secondary p-2 text-light mx-0">
                DADOS PESSOAL
            </h6>
            <div class="h4 p-1 text-primary bg-light">

                {{aluno.nome}}
            </div>
            <p class="m-1"> <span class="my-0 py-0">{{aluno.classe}}</span> </p>
            <p class="m-1"><span>Turma: </span> <span class="">{{turma.codigo}}</span> </p>
            <p class="m-1"><span class="">Curso:</span> <span class="">{{aluno.curso}}</span> </p>
            <p class="m-1 bg-light p-1"><span>BI nº:</span> <span class=" my-0 py-0">{{aluno.numBI}}</span> </p>
            <p class="m-1"><span>Idade:</span> <span class="my-0 py-0">{{aluno.idade}} anos</span> </p>
            <p class="m-1"><span>Período: </span> <span class="">{{turma.periodo}}</span> </p>
            <p class="m-1"><span></span>Morada: <span class="">{{aluno.morada}}</span> </p>
            <p class="m-1"><span></span>Contacto: <span class="">{{aluno.contacto}}</span> </p>
            <button class="btn btn-primary btn-sm">Editar</button>
        </div>



        {{!-- DADOS DE USUÁRIO --}}
        <div class="col-3">
            <h6 class="bg-secondary p-2 text-light mx-0">
                DADOS DE USUÁRIO
            </h6>
            <p class="my-1"><span>Username: </span> <input type="text" name="" value="{{usuario.username}}" disabled>
            </p>
            <p class="my-1"><span>Senha: </span></p> <input type="password" name="" value="{{usuario.senha}}"
                class="my-0" disabled>
{{!-- 
            <p class="mt-4 bg-light text-center"><span class="h6 btn text-danger">Configurações avançadas</span></p>
            <a href="#"> <button class="btn btn-sm btn-primary mt-0"> Alterar curso do aluno </button> </a><br>
            <a href="#"> <button class="btn btn-sm btn-dark mt-1"> Actualizar nº de BI do aluno </button> </a><br>
            <a href="#"> <button class="btn btn-sm btn-danger mt-1"> Remover aluno </button> </a><br>
             --}}
        </div>
    </div>
    {{!-- DADOS DO ENCARREGADO DE EDUCAÇÃO --}}
    <div class="row bg-light p-3">
        <div class="h4 mt-3 bg-info p-1 text-center">DADOS SOBRE O ENCARREGADO DE EDUCAÇÃO</div>
        <div class="col-5">

            <p class="my-1"> <span>Nome do encarregado:</span> <span>{{aluno.nomeEncarregado}}</span></p>
            <p class="my-1"> <span>Grau parentesco:</span> <span>{{alun}}</span></p>
        </div>
        <div class="col-4">
            <p class="my-1"> <span>Profissão:</span> <span>{{aluno.proficao}}</span></p>
            <p class="my-1"> <span>Contacto:</span> <span>{{aluno.contactoEncarregado}}</span></p>

        </div>
        <div class="col-3 p-3"><a href="#"><button class="btn btn-secondary btn-sm">Notificar encarregado via
                    sms</button></a></div>
    </div>
    <div class="conteiner">

        <div class="row">
            <div class="h4 text-center p-1 mt-3 bg-warning">NOTAS DE AVALIAÇÕES E PROVAS</div>
        </div>
        <div class="col-12 text-end">
            <div class="row">
                
                <div class="col-1"></div>
                <div class="col-3 text-center bg-light text-secondary">1º Trimestre</div>
                <div class="col-3 text-center bg-info text-light ms-5">2º Trimestre</div>
                <div class="col-3 text-center bg-secondary text-light mx-3">3º Trimestre</div>
                <div class="col-1 text-center bg-dark text-light ms-0">CF</div>
            </div>

        </div>
    </div>
    <table class="table table-bordered table-sm">
        <tbody>
            <thead class="table-dark">
                <tr>
                    <td><span class="mx-">DISCIPLINAS</span> </td>
                    <td class="bg-light text-secondary">av1</td>
                    <td class="bg-light text-secondary">av2</td>
                    <td class="bg-light text-secondary">av3</td>
                    <td class="bg-light text-secondary">MAC</td>
                    <td class="bg-light text-secondary">PP</td>
                    <td class="bg-light text-secondary">PT1</td>
                    <td class="bg-light text-secondary">MT1</td>

                    {{!-- 2º Trimwstre --}}
                    <td class="bg-info">av1</td>
                    <td class="bg-info">av2</td>
                    <td class="bg-info">av3</td>
                    <td class="bg-info">MAC</td>
                    <td class="bg-info">PP</td>
                    <td class="bg-info">PT2</td>
                    <td class="bg-info">MT2</td>

                    {{!-- 3º Trimwstre --}}
                    <td class="bg-secondary">av1</td>
                    <td class="bg-secondary">av2</td>
                    <td class="bg-secondary">av3</td>
                    <td class="bg-secondary">MAC</td>
                    <td class="bg-secondary">PP</td>
                    <td class="bg-secondary">PT3</td>
                    <td class="bg-secondary">MT3</td>


                    <td>MT</td>
                    <td>E</td>
                    <td>CF</td>


                </tr>
            </thead>
            {{#each notasDisciplina}}
            <ol class="m-0 p-0">

                <tr>
                    
                    <td><span class="text-sm"> {{idMinipauta.nomeDisciplina}} </span> </td>
                    <td> {{notas.av1T1}} </td>
                    <td> {{notas.av2T1}} </td>
                    <td> {{notas.av3T1}} </td>
                    <td class="text-center text-success fw-bold" > {{notas.mac1}} </td>
                    <td> {{notas.pp1}} </td>
                    <td> {{notas.pt1}} </td>
                    <td class="bg-light text-primary text-center fw-bold"> {{notas.mt1}} </td>

                    {{!-- 2º Trimwstre --}}
                    <td> {{notas.av1T2}} </td>
                    <td> {{notas.av2T2}} </td>
                    <td> {{notas.av3T2}} </td>
                    <td class="text-center text-success fw-bold" > {{notas.mac2}} </td>
                    <td> {{notas.pp2}} </td>
                    <td> {{notas.pt2}} </td>
                    <td class="bg-light text-primary text-center fw-bold"> {{notas.mt2}} </td>

                    {{!-- 3º Trimwstre --}}
                    <td> {{notas.av1T3}} </td>
                    <td> {{notas.av2T3}} </td>
                    <td> {{notas.av3T3}} </td>
                    <td class="text-center text-success fw-bold" > {{notas.mac3}} </td>
                    <td> {{notas.pp3}} </td>
                    <td> {{notas.pt3}} </td>
                    <td class="bg-secondary text-light text-center fw-bold"> {{notas.mt3}} </td>


                    <td class="text-center text-primary fw-bold" > {{notas.medDosTrimestes}} </td>
                    <td> {{notas.examePF}} </td>
                    <td class="text-center fw-bold" > {{notas.cf}} </td>


                </tr>
            </ol>
            {{else}}
            <div class="h5 text-center p-2">Nenhuma nota foi lançada!</div>
            {{/each}}
        </tbody>
    </table>
    {{!-- F A   L   A   T   A   S --}}
    <div class="row mt-3">
        <div class="row text-end h4 p-2 bg-light">FALTAS POR DISCIPLINA</div>
        {{#each tdFaltas}}
        <div class="col-3 ">
            <div class="row fw-bold p-1 mx-2 bg-secondary"><span class="text-center text-light" >{{disciplina}}</span></div>
            <hr class="m-0 p-1">
            <div class="row text-center"><span class="text-center" >{{faltas.length}}</span></div>
        </div>
        {{else}}
        {{/each}}
    </div>
</div>
</div>

{{!-- P A U T A   F I N A L  --}}
<div class="container">
    <div class="pe-3 lead text-sm mark text-end">Pauta Final</div>
    <div class="logo text-center mt-3"><img src="/img/logor.png" alt=""></div>
    <div class="text-center">
        <p class="m-1">República de Angola</p>
        <p class="m-1">Governo da Província do Bié</p>
        <p class="m-1">Administração Municipal de Catabola</p>
        <p class="fw-bold" >LICEU FELIZBERTO DOMINGO NGUNGA</p>

        <div class="mt-3 lead text-danger">PAUTA FINAL</div>
    </div>
    <div class="row"><div class="col-9" > {{dadosTurma.idClasse.designacao}} </div> <div class="col-3" > <span class="fw-bold" >Período:</span> <span> {{dadosTurma.periodo}} </span> </div> </div>
    <div class="row mb-0 pb-0"><div class="col-9 mb-0 pb-0" > <span>Turma: </span> <span class="fw-bold mb-0 pb-0">{{dadosTurma.codigo}}</span> </div> <div class="col-3 mb-0 pb-0" > <span class="fw-bold mb-0 pb-0" >Ano Lectivo:</span> <span> {{anoLectivo.codigo}} </span> </div> </div>
    <table class="table mt-0 table-bordered table-sm">
        <thead class="table-secondary mt-1">
            <tr>
                <td>N/O</td>
                <td>Nome Completo</td>
            {{#each disciplinas}}
            <td> {{disciplina}} </td>
            {{else}}
            {{/each}}
            <td><span class="fw-bold">OBS</span></td>
            </tr>
        </thead>
        <tbody>
            <ol>


                <tr>
                    <td><li></li></td>
                    <td> {{dadosFinal.nome}} </td>
                {{#each dadosFinal.notas.notas}} 
                <td> {{nota}} </td>
                {{else}}
            <div class="lead text-light text-center bg-danger">Ainda não foi gerada a Pauta Final</div>
                {{/each}}
                <td> {{dadosFinal.estado}} </td>
                 </tr>
                
            </ol>
        </tbody>
    </table>
    <hr>
</div>{{!-- FIM--}}