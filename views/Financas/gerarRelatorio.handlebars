{{!-- P R I M E I R O T R I M E S T R E --}}
<div class="container">
    <div class="pe-3 lead text-sm mark text-end">Registro do dia {{dia}} </div>
    <div class="logo text-center mt-3"><img src="/img/logor.png" alt=""></div>
    <div class="text-center">
        <p class="m-1">República de Angola</p>
        <p class="m-1">Governo da Província do Bié</p>
        <p class="m-1">Administração Municipal de Catabola</p>
        <p class="fw-bold">LICEU FELIZBERTO DOMINGO NGUNGA</p>

        <div class="mt-3 lead">RELATÓRIO DIÁRIO</div>
    </div>
    <div class="row">
        <div class="col-6"> {{dadosTurma.idClasse.designacao}} </div>
        <div class="col-5 text-end"> <span class="fw-bold">Data solicitada:</span> <span> {{dia}} </span> </div>
    </div>
    <div class=""> <span class="fw-bold">Funcionário: </span> <span> {{dadosTurma.codigo}} </span></div>
    <table class="table table-bordered table-sm">
        <thead class="table-secondary">
            <tr>
                <td>Receitas</td>
            </tr>

        </thead>
        <tbody>
            <hr>
            <div class="container mt-3 mb-5 pb-5">
                <table class="table table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Descrição</th>
                            <th scope="col">Qt</th>
                            <th scope="col">Valor</th>
                            <th scope="col text-end">#</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each receitas}}
                        <tr>

                            <td> {{descricao}} </td>
                            <td> {{qt}} </td>
                            <td> {{valor}} </td>
                            <td>
                                <form action="/secretaria/aceitarSolicitacao" method="post">
                                    <div class="row">
                                        <div class="col-6 text-end">
                                            <input type="hidden" name="numBI" value="{{numBI}}" id="">
                                            <input type="hidden" name="idSolic" value="{{_id}}" id="">
                                            <input type="hidden" name="tipo" value="{{tipoOcorrencia}}" id="">
                                            <a href="/secretaria/detalheSolic/{{_id}}" class="btn btn-sm"><i
                                                    class="bi bi-eye"> </i></a>

                                        </div>

                                    </div>
                                </form>
                            </td>
                        </tr>
                        {{else}}
                        <div class="col-4 offset-4">
                            <div class="text-center mybg-danger p-2 text-light fw-bold">Nenhuma receita registrada</div>

                        </div>
                        {{/each}}
                        <tr>
                            <td scope="col">TOTAL DE RECEITAS</td>
                            <td scope="col"></td>
                            <td scope="col text-end"> <span class="fw-bold"> {{total}} </span> </td>
                            <td scope="col"></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </tbody>
    </table>
    <table class="table table-bordered table-sm">
        <thead class="table-secondary">
            <tr>
                <td>Despesas</td>
            </tr>

        </thead>
        <tbody>
            <hr>
            <div class="container mt-3 mb-5 pb-5">
                <table class="table table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Descrição</th>
                            <th scope="col">Valor</th>
                            <th scope="col text-end">#</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each despesas}}
                        <tr>

                            <td> {{descricao}} </td>
                            <td> {{valor}} </td>
                            <td>
                                <form action="/secretaria/aceitarSolicitacao" method="post">
                                    <div class="row">
                                        <div class="col-6 text-end">
                                            <input type="hidden" name="numBI" value="{{numBI}}" id="">
                                            <input type="hidden" name="idSolic" value="{{_id}}" id="">
                                            <input type="hidden" name="tipo" value="{{tipoOcorrencia}}" id="">
                                            <a href="/secretaria/detalheSolic/{{_id}}" class="btn btn-sm"><i
                                                    class="bi bi-eye"> </i></a>

                                        </div>

                                    </div>
                                </form>
                            </td>
                        </tr>
                        {{else}}
                        <div class="col-4 offset-4">
                            <div class="text-center mybg-danger p-2 text-light fw-bold">Nenhuma despesa registrada</div>

                        </div>
                        {{/each}}
                        <tr>
                            <td scope="col">TOTAL DE Despesas</td>
                            <td scope="col text-end"> <span class="fw-bold"> {{total}} </span> </td>
                            <td scope="col"></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </tbody>
    </table>
    <div class="text-center"><a href="/relatorios/relFDiario" class="btn btn-secondary">Gerar
            PDF</a></div>
    <hr>
</div>{{!-- FIM--}}