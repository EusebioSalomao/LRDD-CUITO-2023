<div class="form-headear my-0">
    <div class="title">
        <h1>Editar dados do funcionário</h1>
    </div>
</div>
<hr>
 <div class="row mt-0">
    <div class="col-6 offset-3">
         {{#each erros}}
        <div class="alert alert-danger text-center">{{texto}}</div>
    {{else}}
    {{/each}}
    </div>
   </div>
<div class="container">
    <div class="card input-box">
        <div class="card-body form-candidato mybox">
            <form action="/funcionarios/saveEditar" method="post">

                <div class="row">
                    <div class="col-6 p-3">
                        <label for="nome">Nome:</label>
                        <input type="text" name="nome" value="{{funcionario.nome}}" class="form-control" required>
                        <div class="row">
                            <div class="col-6">
                                <label for="numBI">BI:</label>
                                <input type="text" name="numBI" value="{{funcionario.numBI}}" class="form-control text-sm" required>
                            </div>
                            <div class="col-6">
                                <label for="contacto">Contacto:</label>
                                <input type="tel" name="contacto" autocomplete="contacto" value="{{funcionario.contacto}}" class="form-control" pattern="^[0-9]{3}-[0-9]{3}-[0-9]{3}$"
                                    required>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <label for="genero">Genero:</label>
                                <select name="genero" disabled id="" required>
                                    <option value="{{funcionario.genero}}"> {{funcionario.genero}} </option>
                                </select>
                            </div>
                            <div class="col-6">
                                <label for="idade">Idade:</label>
                                <input type="number" name="idade" value="{{funcionario.idade}}"
                                    class="form-control" required>

                            </div>
                        </div>
                            
                            <div class="row">
                                <div class="col-9">
                                    
                            <input type="hidden" name="idF" value="{{funcionario._id}}" >
                            <a href="/funcionarios/detalhes/{{funcionario._id}}" class="btn btn-secondary mt-4">Cancelar</a>
                            <a href="#"><button type="submit" class="btn btn-success mt-4">Salvar</button></a>

                                </div>
                                <div class="col-3">
                                    
                                </div>
                            </div>
                    </div>
                    <div class="col-6 p-3">
                        <div class="lead text-danger">Dados adicionais</div>
                        <label for="especialidade">Especialidade:</label>
                        <div class="row">
                            <div class="col-6">
                                <input type="text" name="especialidade" class="form-control" value="{{funcionario.especialidade}}"
                                    required>
                        <label for="funcao">Função:</label>
                        <select name="funcao" id="">
                            <option value="{{funcionario.especialidade}}">{{funcionario.funcao}}</option>
                        </select><br>
                        <label for="morada">Morada</label>
                        <input type="text" name="morada" value="{{funcionario.morada}}" class="form-control"
                            required>
                            </div>
                            <div class="col-6">
                                <div class="card" >
                                        <div class="card-body">
                                            <img src="/uploads/{{funcionario.foto}}" class="fotoAluno" alt="Foto">
                                        </div>
                                    </div>

                            </div>
                        </div>

                        <hr>
                        
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>